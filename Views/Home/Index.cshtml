@model SentimentWebApp.Models.SentimentModel

@{
    ViewData["Title"] = "Sentiment Analysis";
}

<h1>Sentiment Analysis</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Analyze" method="post">
            <div class="form-group">
                <label for="InputText">Enter a sentence:</label>
                <textarea asp-for="InputText" class="form-control" rows="4"></textarea>
                <span asp-validation-for="InputText" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Analyze</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Sentiment))
        {
            <div class="mt-4">
                <h4>Result:</h4>
                <p><strong>Sentiment:</strong> @Model.Sentiment</p>
                <p><strong>Confidence:</strong> @(Model.Confidence.ToString("P2"))</p>
 P2 formats as percentage with 2 decimal places
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}